<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ServeTime">
    <TextView
            android:text="000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tVTime"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/topCard"/>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/topCard"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:cardElevation="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorSecondary"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:text="Now Serving:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="20sp"
                android:textColor="@color/quantum_white_100"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"

        />
        <TextView
                android:text="0000000"
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tVServingToken"
                android:layout_marginEnd="20dp"
                android:textColor="@color/quantum_white_100"
                android:layout_gravity="end"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/textView8"
        />
    </android.support.v7.widget.CardView>


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/time_blue"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/tVTime" app:layout_constraintBottom_toBottomOf="@+id/tVTime"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="@+id/cardView2"
            android:layout_marginStart="8dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardElevation="7dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/cardView2" app:layout_constraintHorizontal_bias="0.451"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tVTime">
        <TextView android:layout_width="wrap_content"
                  android:text="Your Token "
                  android:layout_marginTop="16dp"
                  android:textColor="@color/quantum_white_100"
                  android:layout_gravity="center_horizontal"
                  android:textSize="20sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:text="000000"
                  android:textStyle="bold"
                  android:textColor="@color/quantum_white_100"
                  android:textSize="30dp"
                  android:id="@+id/tvYourToken"
                  android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/bCancelOrder"
            android:textColor="@color/quantum_white_100"
            android:text="Cancle Order"
            android:background="@color/colorSecondary"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>