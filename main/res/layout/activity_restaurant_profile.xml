<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:focusableInTouchMode="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RestaurantProfile">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:background="@color/quantum_grey300"
            android:layout_height="300dp"
            >
        <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="exitUntilCollapsed|scroll|enterAlwaysCollapsed"
                app:title="@string/app_name"
                app:expandedTitleMarginStart="10dp"
                app:expandedTitleMarginEnd="10dp"
                android:id="@+id/restname"
                app:contentScrim="?attr/colorPrimary">ut>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/respic"
                    app:srcCompat="@drawable/hotfood"
                    android:transitionName="restImage"
                    app:layout_collapseMode="parallax"
                    android:scaleType="centerCrop"
                      />
            <android.support.v7.widget.Toolbar
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    app:popupTheme="@style/AppTheme2"
                    app:layout_collapseMode="parallax"
            />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:background="@color/quantum_white_100"
            android:layout_height="match_parent"
            android:id="@+id/rv_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    </android.support.v7.widget.RecyclerView>
</android.support.design.widget.CoordinatorLayout>
