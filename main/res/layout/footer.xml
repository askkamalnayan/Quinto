<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:elevation="0dp"
        android:layout_height="wrap_content">
<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/quantum_white_100"
        android:layout_height="match_parent">
    <ImageView
            android:layout_width="355dp"
            android:layout_height="96dp" app:srcCompat="@drawable/sublogo3"
            android:id="@+id/iVS"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Created With Love By Kamal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/quantum_black_secondary_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iVS" android:layout_marginTop="12dp"/>

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>